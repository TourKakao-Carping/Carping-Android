<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/back"
            android:clickable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#191919"
            android:gravity="center_horizontal"
            android:text="무료나눔"
            android:clickable="false"/>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/comment_area"
        android:layout_below="@id/toolbar">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:clickable="true">
            <LinearLayout
                android:id="@+id/middle_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="46dp"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="horizontal"
                    android:weightSum="375"
                    android:clickable="false">
                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="47"
                        android:scaleType="fitXY"
                        android:clickable="false"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="320"
                        android:layout_marginLeft="10dp"
                        android:clickable="false">
                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름"
                            android:fontFamily="@font/spoqa_han_sans_neo_bold"
                            android:layout_marginTop="3dp"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:clickable="false"/>

                        <TextView
                            android:id="@+id/hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시간"
                            android:fontFamily="@font/spoqa_han_sans_neo_medium"
                            android:layout_marginTop="2dp"
                            android:textSize="11sp"
                            android:clickable="false"/>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/list_btn"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="7"
                        android:clickable="true"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/image_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:clickable="true">
                </androidx.viewpager2.widget.ViewPager2>
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="6.6sp"
                    tools:text="증말들"
                    android:layout_marginTop="15dp"
                    android:clickable="false"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    tools:text="노지에 잠시 나들이갔다오며 주워왔네요"
                    android:layout_marginTop="11dp"
                    android:clickable="false"/>
                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="3.8sp"
                    android:layout_marginTop="20dp"
                    android:clickable="false"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false">
                    <LinearLayout
                        android:id="@+id/tag_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:clickable="false"/>
                </HorizontalScrollView>
                <ImageView
                    android:id="@+id/ask_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="26dp"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/like_comment"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    tools:text="좋아요10 · 댓글21"
                    android:layout_gravity="right"
                    android:clickable="false"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#cecece"
                    android:layout_marginTop="22dp"
                    android:clickable="false">
                </View>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comment_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:clickable="false"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/list_layout"
            android:layout_width="94dp"
            android:layout_height="124dp"
            android:orientation="vertical"
            android:background="@drawable/share_spinner"
            android:layout_alignParentRight="true"
            android:weightSum="3"
            android:layout_marginRight="3dp"
            android:visibility="gone"
            android:clickable="false">
            <TextView
                android:id="@+id/share_delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="삭제하기"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#000000"
                android:clickable="true"/>
            <TextView
                android:id="@+id/share_fix"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="수정하기"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#000000"
                android:clickable="true"/>
            <TextView
                android:id="@+id/share_complete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="거래완료"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#000000"
                android:clickable="true"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/comment_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="false"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#cecece"
            android:clickable="false">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false">
            <LinearLayout
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="13dp"
                android:clickable="false">
                <ImageView
                    android:id="@+id/like_mark"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:clickable="false"/>
                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:clickable="false"/>
            </LinearLayout>
            <EditText
                android:id="@+id/comment_edit_view"
                android:layout_toLeftOf="@+id/complete_comment"
                android:layout_toRightOf="@id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box_img"
                android:layout_marginVertical="24dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:hint="댓글을 입력해주세요."
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="13sp"
                android:clickable="false"/>
            <TextView
                android:id="@+id/complete_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#999999"
                android:text="등록"
                android:maxLines="1"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:background="#22222222"
                android:paddingVertical="16dp"
                android:paddingHorizontal="13dp"
                android:clickable="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>