<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/spoqa_han_sans_neo"
    android:textStyle="bold"
    android:textSize="20sp"
    android:textColor="#000000"
    android:text="오늘의 에코카핑은?"/>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/main_eco_check_mark"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center">
                </ImageView>
                <TextView
                    android:layout_marginLeft="3.5dp"
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <TextView
                android:id="@+id/monthWrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#666666"/>
            <ImageView
                android:id="@+id/main_eco_write_button"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
            </ImageView>
        </LinearLayout>
        <ImageView
            android:id="@+id/main_eco_image"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:text="실시간 에코리뷰🌱"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/total_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textColor="#848484"
                android:textSize="13sp"
                android:textStyle="normal"
                android:layout_gravity="center_vertical"
                android:text="전체보기" />
        </LinearLayout>
        <TextView
            android:id="@+id/today_eco_carping_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:textColor="#999999"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/no_review_img"
            android:layout_gravity="center"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="70dp"/>

        <androidx.recyclerview.widget.RecyclerView
            nestedScrollingEnabled="false"
            android:id="@+id/eco_carping_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/eco_ranking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo"
            android:text="에코랭킹 🌍"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/no_ranking_img"
            android:layout_gravity="center"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="70dp"/>

        <androidx.recyclerview.widget.RecyclerView
            nestedScrollingEnabled="false"
            android:id="@+id/eco_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="23dp"/>
    </LinearLayout>
</LinearLayout>