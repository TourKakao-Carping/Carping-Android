<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/text_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/back"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/back"
                android:layout_gravity="center_vertical"
                android:clickable="true"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#191919"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/back2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/back"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:layout_marginRight="5dp"/>

            <EditText
                android:id="@+id/camping_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="40.5dp"
                android:background="@null"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:hint="관광지를 검색해주세요"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#191919"
                android:textSize="16sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/remove_search"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:clickable="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.30000001192092896dp"
        android:background="#cecece"
        android:layout_marginBottom="35.8dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mapsearch_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>