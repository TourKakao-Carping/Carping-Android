<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="15.9dp"
                    android:layout_height="15.9dp"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/cancel_img"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RatingBar
                android:id="@+id/totalstar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:progressTint="#5f51ef"
                style="@style/Widget.AppCompat.RatingBar"
                android:layout_gravity="center"
                android:layout_marginBottom="14dp"/>
            <TextView
                android:id="@+id/star_ment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이 캠핑장을 평가해주세요!"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#acb1b5"
                android:gravity="center"
                android:layout_marginBottom="38dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="청결"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="#666666"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <RatingBar
                        android:id="@+id/star1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="#5f51ef"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:isIndicator="false"
                        android:stepSize="0.5"
                        android:numStars="5"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="주차장"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="#666666"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <RatingBar
                        android:id="@+id/star2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="#5f51ef"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:stepSize="0.5"
                        android:isIndicator="false"
                        android:numStars="5"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="편의"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="#666666"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <RatingBar
                        android:id="@+id/star3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="#5f51ef"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:stepSize="0.5"
                        android:isIndicator="false"
                        android:numStars="5"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="35dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="위치"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="#666666"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <RatingBar
                        android:id="@+id/star4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="#5f51ef"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:stepSize="0.5"
                        android:isIndicator="false"
                        android:numStars="5"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진첨부"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/picture_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginBottom="35dp"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:id="@+id/select_picture_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginBottom="35dp"
                    android:weightSum="3">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/select_picture_btn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:clickable="true"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginBottom="17dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="리뷰내용"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:text="0/300"
                    android:textColor="#000000"
                    android:gravity="right"/>
            </LinearLayout>
            <EditText
                android:id="@+id/review_edittext"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:hint="다른분들에게 도움이 될 수 있는 클린한 리뷰를 작성해주세요!"
                android:textColorHint="#d7d7d7"
                android:background="@drawable/border_round"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:maxLength="300"
                android:gravity="top"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="14dp"
                android:layout_marginBottom="79dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/review_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:text="작성하기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#999999"
        android:textColor="#FFFFFF"
        android:gravity="center"/>
</LinearLayout>
