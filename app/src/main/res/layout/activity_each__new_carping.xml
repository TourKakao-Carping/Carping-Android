<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="eachNewCarpingViewModel"
            type="com.tourkakao.carping.newcarping.viewmodel.EachNewCarpingViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/back"
                        android:layout_marginLeft="16dp"
                        android:clickable="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신규 차박지"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="216dp"
                    android:orientation="vertical"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/newcarping_share_img"
                    android:layout_width="64dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="6.6dp"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/newcarping_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="@{eachNewCarpingViewModel.title}"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:clickable="true"/>
                    <ImageView
                        android:id="@+id/bookmark_img"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="0.1"
                        android:clickable="true"/>
                    <ImageView
                        android:id="@+id/listbtn"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="0.1"
                        android:clickable="true"
                        android:visibility="gone"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="7dp">
                    <RatingBar
                        android:id="@+id/newcarping_total_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="@{eachNewCarpingViewModel.total_star}"
                        android:stepSize="0.1"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/newcarping_star_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@{eachNewCarpingViewModel.total_star_num}"
                        android:textColor="@color/purple_text"
                        android:layout_toRightOf="@+id/newcarping_total_rating"
                        android:layout_marginLeft="3dp"
                        android:clickable="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24.9dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/locate_img"
                        android:layout_width="10dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/locate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@{eachNewCarpingViewModel.address}"
                        android:textColor="#000000"
                        android:paddingLeft="9.1dp"
                        android:clickable="true"/>
                </LinearLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/newcarping_tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tabIndicatorColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="24dp"
                    android:clickable="true"/>
                <androidx.core.widget.NestedScrollView
                    android:id="@+id/imagenest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:scrollbars="none"
                    android:clickable="true">
                    <FrameLayout
                        android:id="@+id/newcarping_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/list_layout"
            android:layout_width="94dp"
            android:layout_height="124dp"
            android:background="@drawable/share_spinner"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_marginTop="290dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/newcarping_delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="삭제하기"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="13sp"
                android:clickable="true"/>
            <TextView
                android:id="@+id/newcarping_edit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="수정하기"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="13sp"
                android:clickable="true"/>
        </LinearLayout>
    </RelativeLayout>

</layout>