<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="35.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="4dp"
                android:id="@+id/posting_img"
                android:layout_gravity="center"
                android:layout_width="33dp"
                android:layout_height="26dp"/>
            <TextView
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#666666"
                android:gravity="center_horizontal"
                android:text="포스팅 형식"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="45dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/contents_number_img"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="34dp"/>
            <TextView
                android:id="@+id/content_count"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#666666"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="6dp"
                android:id="@+id/like_img"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="23dp"/>
            <TextView
                android:id="@+id/like_count"
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#666666"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="포스트 미리보기"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginHorizontal="16dp">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/image_area"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="horizontal">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image1"
                android:layout_width="323dp"
                android:layout_height="match_parent"
                android:layout_marginRight="14dp">
            </ImageView>
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image2"
                android:layout_width="323dp"
                android:layout_height="match_parent"
                android:layout_marginRight="14dp">
            </ImageView>
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image3"
                android:layout_width="323dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="포스트 소개"/>
    <TextView
        android:id="@+id/post_introduce"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="#666666"
        android:lineSpacingExtra="12sp"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="추천하는 대상"/>
    <TextView
        android:id="@+id/recommend_text"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="#666666"
        android:lineSpacingExtra="12sp"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="작가의 한마디"/>
    <TextView
        android:layout_marginBottom="88dp"
        android:id="@+id/writer_comment"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="#666666"
        android:lineSpacingExtra="12sp"/>
</LinearLayout>