<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="eachnewcarpingviewmodel"
            type="com.tourkakao.carping.newcarping.viewmodel.EachNewCarpingViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newcarping_imagereview_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/no_review_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <ImageView
            android:id="@+id/newcarping_profile_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="@{eachnewcarpingviewmodel.review_user_star}"
            android:stepSize="0.1"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:clickable="true"/>
        <TextView
            android:id="@+id/newcarping_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{eachnewcarpingviewmodel.review_username}"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이 차박지를 평가해주세요!"
            android:textColor="#000000"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/newcarping_review_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{eachnewcarpingviewmodel.review_count}"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:id="@+id/review_star_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/newcarping_review_total_starnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{Float.toString(eachnewcarpingviewmodel.review_star_num)}"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"/>
                <RatingBar
                    android:id="@+id/newcarping_review_total_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="@{eachnewcarpingviewmodel.review_star}"
                    android:stepSize="0.1"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textSize="12sp"
                        android:text="청결"
                        android:textColor="#000000"/>
                    <RatingBar
                        android:id="@+id/star1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="@{eachnewcarpingviewmodel.review_star1}"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/start1_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="@{Float.toString(eachnewcarpingviewmodel.review_star1_num)"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textSize="12sp"
                        android:text="주차장"
                        android:textColor="#000000"/>
                    <RatingBar
                        android:id="@+id/star2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="@{eachnewcarpingviewmodel.review_star2}"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/start2_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="@{Float.toString(eachnewcarpingviewmodel.review_star2_num)"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textSize="12sp"
                        android:text="편의"
                        android:textColor="#000000"/>
                    <RatingBar
                        android:id="@+id/star3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="@{eachnewcarpingviewmodel.review_star3}"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/start3_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="@{Float.toString(eachnewcarpingviewmodel.review_star3_num)"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textSize="12sp"
                        android:text="위치"
                        android:textColor="#000000"/>
                    <RatingBar
                        android:id="@+id/star4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="@{eachnewcarpingviewmodel.review_star4}"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/start4_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="@{Float.toString(eachnewcarpingviewmodel.review_star4_num)"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newcarping_review_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>