<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/register"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

        <ImageView
            android:id="@+id/success_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="62dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="63dp"
            android:layout_marginBottom="45dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 차박지 등록"
        android:textSize="15sp"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="35dp"/>
    <Button
        android:id="@+id/okbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보러가기"
        android:backgroundTint="@color/black"
        android:background="@drawable/purple_border_round"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:textSize="15sp"
        android:paddingLeft="51dp"
        android:paddingRight="51dp"
        android:paddingTop="14.68dp"
        android:paddingBottom="14dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>
</LinearLayout>