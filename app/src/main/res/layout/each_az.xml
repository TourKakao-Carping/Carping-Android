<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="300dp"
    android:layout_height="210dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/az_profile_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_columnWeight="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.3">
                <ImageView
                    android:id="@+id/az_background_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/premium_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREMIUM"
                    android:textColor="#000000"
                    android:textSize="8sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/az_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:gravity="center"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">
                <RatingBar
                    android:id="@+id/az_ratingstar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:isIndicator="false"
                    android:layout_gravity="center"
                    style="@style/Widget.AppCompat.RatingBar.Small"/>
                <TextView
                    android:id="@+id/az_starnumber_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:textColor="#9F81F7"/>
                <TextView
                    android:id="@+id/az_total_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:baselineAlignBottom="true"
                    android:layout_marginRight="5dp"
                    android:textSize="10sp"
                    android:textColor="#848484"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:text="자세히보기"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:clickable="true"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
