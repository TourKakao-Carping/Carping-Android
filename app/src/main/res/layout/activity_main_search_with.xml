<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/back"
                    android:layout_marginRight="12dp"/>
                <EditText
                    android:id="@+id/main_search"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/back"
                    android:hint="어디로 떠나고 싶으신가요?"
                    android:textColor="#191919"
                    android:background="@null"/>
                <ImageView
                    android:id="@+id/remove"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="16dp"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.30000001192092896dp"
        android:background="#cecece"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="29.8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인기 키워드"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="20dp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/popular_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="29.8dp">

                </LinearLayout>
            </HorizontalScrollView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.30000001192092896dp"
                android:background="#cecece"
                android:layout_marginBottom="29.8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 검색어"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recent_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_search_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>