<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="themedetailviewmodel"
            type="com.tourkakao.carping.theme.viewmodel.ThemeDetailViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/back"
                    android:clickable="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{themedetailviewmodel.name}"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/theme_main_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="22dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2.5dp"
                android:paddingRight="2.5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="#fafafa"
                android:textColor="#a1a1a1"
                android:textSize="11sp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:text="@{themedetailviewmodel.cat}"
                android:layout_marginBottom="8dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:text="@{themedetailviewmodel.name}"/>
                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="13dp"
                    android:layout_height="16dp"
                    android:clickable="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/theme_detail_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/black"
                android:layout_marginBottom="30dp"
                app:tabMode="scrollable">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정보"/>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천"/>
            </com.google.android.material.tabs.TabLayout>
            <FrameLayout
                android:id="@+id/theme_detail_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>