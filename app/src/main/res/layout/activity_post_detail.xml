            </LinearLayout>
            <View
                android:layout_marginTop="59.5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cdcdcd">
            </View>
            <LinearLayout
                android:layout_marginTop="44.5dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/bottom_profile"
                    android:layout_width="47dp"
                    android:layout_height="47dp"/>
                <TextView
                    android:id="@+id/bottom_name"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#000000"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/writer_img"
                    android:layout_gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/channel_introduce"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="normal"
                android:textSize="11sp"
                android:textColor="#999999"
                android:lineSpacingExtra="6.1sp"
                android:layout_marginBottom="50dp"/>
            <RelativeLayout
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="30dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/recommend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/pay_type_img"
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="32dp"/>
                <TextView
                    android:id="@+id/recommend_title"
                    android:layout_marginTop="56dp"
                    android:layout_marginLeft="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_marginTop="76dp"
                    android:layout_marginLeft="19dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#afafaf"
                    android:text="작가의 포스트"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
