<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mypage.PhoneCertificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            >
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#191919"
                android:text="휴대폰 인증"
                android:gravity="center_horizontal"
                />
            <ImageView
                android:id="@+id/back"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="left"/>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="전화번호를 입력해주세요"/>

        <TextView
            android:layout_marginTop="7dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="#999999"
            android:text="서비스 시작을 위해 전화번호 인증이 필요합니다."/>

        <TextView
            android:layout_marginTop="37dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#7d7d7d"
            android:text="휴대폰"/>

        <EditText
            android:maxLength="20"
            android:singleLine="true"
            android:inputType="number"
            android:paddingHorizontal="16dp"
            android:id="@+id/phone_number"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_box_img"
            android:hint="숫자만 입력"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/number_post_button"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text="인증요청"
            android:background="@drawable/border_round_fill_black"
            android:paddingVertical="9dp"
            android:paddingHorizontal="29dp"/>

        <LinearLayout
            android:id="@+id/certification_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="35dp"
                android:layout_marginLeft="16dp"
                android:layout_width="48dp"
                android:layout_height="16dp"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#7d7d7d"
                android:text="인증번호"/>

            <RelativeLayout android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">
                <EditText
                    android:singleLine="true"
                    android:inputType="number"
                    android:paddingHorizontal="16dp"
                    android:id="@+id/certification_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:background="@drawable/edit_text_box_img"
                    android:hint="인증번호 입력"
                    android:textSize="13sp"/>
                <LinearLayout
                    android:layout_marginRight="19dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:textColor="#acb1b5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:textColor="#acb1b5"
                        android:text=":"/>
                    <TextView
                        android:id="@+id/second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:textColor="#acb1b5"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/completion_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#999999"
        android:text="완료"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"/>
</RelativeLayout>