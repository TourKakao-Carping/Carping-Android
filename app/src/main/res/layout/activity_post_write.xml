<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post.PostWriteActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqa_han_sans_neo"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#191919"
            android:gravity="center_horizontal"
            android:text="글쓰기"
            />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_above="@id/completion_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <EditText
                android:layout_marginTop="16dp"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#d0d0d0"
                android:text="제목을 입력해주세요"
                android:background="null"
                android:layout_marginHorizontal="16dp"/>
            <View
                android:layout_marginTop="13.9dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="380dp"
                android:layout_height="0.20000000298023224dp"
                android:background="#d7d7d7">
            </View>
            <LinearLayout
                android:layout_marginTop="33.9dp"
                android:id="@+id/content_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:textColor="#d0d0d0"
                        tools:text="소제목을 입력해주세요"
                        android:background="null"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spoqa_han_sans_neo_medium"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:textColor="#d0d0d0"
                            tools:text="문단추가"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="14dp"
                            android:layout_height="14dp"/>
                    </LinearLayout>
                </LinearLayout>
                <EditText
                    android:layout_marginTop="11dp"
                    android:layout_marginHorizontal="16dp"
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="156dp"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="#d0d0d0"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="12sp"
                    android:text="포스트 내용을 입력해주세요. (최대 500자)"
                    android:gravity="top"
                    android:padding="14dp"
                    android:background="@drawable/edit_text_box_img"/>
                <ImageView
                    android:layout_marginTop="28dp"
                    android:layout_marginHorizontal="16dp"
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/completion_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:text="다음"
        android:fontFamily="@font/spoqa_han_sans_neo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textAlignment="viewEnd"
        android:paddingVertical="23dp"
        android:paddingRight="38dp"/>
</RelativeLayout>