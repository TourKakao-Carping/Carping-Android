<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/cancel_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="차박지 등록"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/before_search_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="14dp">
                    <ImageView
                        android:id="@+id/locate_img"
                        android:layout_width="10dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="3dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위치"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/after_search_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/search_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="검색한 위치 결과"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/re_locate_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다시 선택"
                        android:textSize="13sp"
                        android:textColor="@color/purple_text"
                        android:layout_alignParentRight="true"
                        android:clickable="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">
                <TextView
                    android:id="@+id/locate_textview"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="새로운 차박지를 검색해주세요"
                    android:background="@drawable/border_round"
                    android:textSize="13sp"
                    android:textColor="#acb1b5"
                    android:paddingLeft="18.5dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:clickable="true"/>
                <RelativeLayout
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:orientation="vertical"
                    android:visibility="gone"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:id="@+id/no_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사진첨부"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp"/>
                    <ImageView
                        android:id="@+id/image_btn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:clickable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/yes_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="사진첨부"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/image_cnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/4"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/image_area_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/add_image"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:text="+"
                                android:textSize="35sp"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:backgroundTint="#E6E6E6"
                                android:background="@drawable/border_round"
                                android:clickable="true"
                                android:layout_marginRight="12dp"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="14dp"/>
            <EditText
                android:id="@+id/title_edittext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="차박지 이름을 등록해주세요"
                android:background="@drawable/border_round"
                android:textSize="13sp"
                android:textColorHint="#acb1b5"
                android:paddingLeft="25.5dp"
                android:paddingRight="25.5dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginBottom="35dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginBottom="17dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="등록내용"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:text="0/100"
                    android:textColor="#000000"
                    android:gravity="right"/>
            </LinearLayout>
            <EditText
                android:id="@+id/review_edittext"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:hint="내용을 입력해주세요"
                android:textColorHint="#acb1b5"
                android:background="@drawable/border_round"
                android:textSize="13sp"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:gravity="top"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="14dp"
                android:layout_marginBottom="35dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="태그첨부"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/tags_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체 삭제"
                    android:textColor="@color/purple_text"
                    android:textSize="13sp"
                    android:layout_alignParentRight="true"
                    android:clickable="true"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:id="@+id/tag_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:text="등록하기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#A4A4A4"
        android:textColor="#FFFFFF"
        android:gravity="center"/>
</LinearLayout>