<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55.5dp">
        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#191919"
            android:text="작성하기"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_above="@id/completion_button"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">
                <ImageView
                    android:id="@+id/locate_img"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/reselect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#5f51ef"
                    android:gravity="end"
                    android:text="다시 선택"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <EditText
                android:id="@id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box_img"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="어디서 에코캠핑을 하셨나요?"
                android:textSize="13sp"
                android:maxLines="1"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionSearch"
                android:layout_marginTop="15.5dp"
                android:focusable="false"/>
            <RelativeLayout
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="34.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="쓰레기 사진을 첨부해주세요"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/image_count"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#9d9d9d"
                    android:text="0/4"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/insert_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/photo_insert_button"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:layout_marginTop="15dp"/>
            <HorizontalScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="16dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/add_image"
                        android:layout_width="86dp"
                        android:layout_height="86dp"/>
                    <LinearLayout
                        android:id="@+id/image_area"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="제목"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="35dp"/>
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box_img"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="어떤 에코캠핑을 하셨나요?"
                android:textSize="13sp"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="38.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="인증내용"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/text_length"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#9d9d9d"
                    android:text="0/500"/>
            </LinearLayout>
            <EditText
                android:maxLength="500"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:background="@drawable/edit_text_box_img"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="15dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">
                <TextView
                    android:layout_width="59dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="태그첨부"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:id="@+id/delete_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="#5f51ef"
                    android:gravity="end"
                    android:text="전체 삭제"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:scrollbars="none"
                android:layout_marginBottom="35dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tag_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tag_design"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="20dp"
                        android:textColor="#5f51ef"
                        android:text="+"/>
                    <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/tag_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/radio_group_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="쓰레기가 몇리터나왔나요?"
                android:layout_marginLeft="16dp"/>
            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="57dp"
                android:paddingBottom="3dp">
                <RadioButton
                    android:id="@+id/twozeroL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:text="20L"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5.5dp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeTextType="uniform"/>
                <RadioButton
                    android:id="@+id/onezeroL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:text="10L"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5.5dp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeTextType="uniform"/>
                <RadioButton
                    android:id="@+id/fiveL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:text="5L"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5.5dp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeTextType="uniform"/>
                <RadioButton
                    android:id="@+id/threeL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:text="3L"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5.5dp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeTextType="uniform"/>
                <RadioButton
                    android:id="@+id/underthreeL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button"
                    android:text="3L 이하"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5.5dp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeTextType="uniform"/>
            </RadioGroup>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/completion_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#999999"
        android:text="작성하기"
        android:fontFamily="@font/spoqa_han_sans_neo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"/>
</RelativeLayout>