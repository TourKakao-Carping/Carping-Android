<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55.5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#191919"
            android:text="작성하기"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="위치"
                android:layout_marginLeft="33.7dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box_img"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="어디서 에코캠핑을 하셨나요?"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="184dp"
                android:layout_height="20dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="쓰레기 사진을 첨부해주세요"
                android:layout_marginLeft="16dp"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/photo_insert_button"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="제목"
                android:layout_marginLeft="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_box_img"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="어떤 에코캠핑을 하셨나요?"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="59dp"
                android:layout_height="20dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="인증내용"
                android:layout_marginLeft="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:background="@drawable/edit_text_box_img"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <TextView
                android:layout_width="59dp"
                android:layout_height="20dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="태그첨부"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="174dp"
                android:layout_height="20dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="쓰레기가 몇리터나왔나요?"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>