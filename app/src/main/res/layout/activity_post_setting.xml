<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post.PostSettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqa_han_sans_neo"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#191919"
            android:gravity="center_horizontal"
            android:text="포스트 설정"
            />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_above="@id/completion_button"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="포스트 설정"/>
            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button_square_ver"
                    android:text="유료"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"
                    android:paddingVertical="16dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="13sp"/>
                <View
                    android:layout_width="16dp"
                    android:layout_height="0dp"/>
                <RadioButton
                    android:id="@+id/free"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_button_square_ver"
                    android:text="무료"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"
                    android:paddingVertical="16dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="13sp"/>
            </RadioGroup>
            <TextView
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="가격"/>
            <RelativeLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edit_text_box_img"/>
                <TextView
                    android:layout_alignRight="@id/price"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#acb1b5"
                    android:text="포인트"
                    android:layout_marginRight="16dp"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="판매가격을 100포인트 단위로 최대 20,000포인트까지 설정할 수 있습니다.
카핑은 유료포스트의 판매 또는 환불에 대한 기능을 제공하지 않습니다."/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="포스트 소개"/>
            <EditText
                android:id="@+id/introduce"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#000000"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="12sp"
                android:hint="포스트 메인에 보여드릴 소개글을 간단하게 적어주세요"
                android:gravity="top"
                android:padding="14dp"
                android:background="@drawable/edit_text_box_img"/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="추천하는 대상"/>
            <EditText
                android:id="@+id/recommend"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#000000"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="12sp"
                android:hint="포스트를 추천하고싶은 대상을 적어주세요"
                android:gravity="top"
                android:padding="14dp"
                android:background="@drawable/edit_text_box_img"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/completion_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#999999"
        android:text="등록하기"
        android:fontFamily="@font/spoqa_han_sans_neo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:paddingVertical="23dp"/>
</RelativeLayout>