<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EcoCarping.EcoCarpingDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqa_han_sans_neo"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#191919"
            android:gravity="center_horizontal"
            android:text="에코카핑"
            />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:layout_marginTop="3dp"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간"
                        android:layout_marginTop="7dp"
                        android:textSize="11sp"/>

                </LinearLayout>
            </LinearLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/image_view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.viewpager.widget.ViewPager>
            <TextView
                android:layout_width="34dp"
                android:layout_height="19dp"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#666666"
                android:lineSpacingExtra="6.6sp"
                tools:text="증말들"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="327dp"
                android:layout_height="25dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#000000"
                tools:text="노지에 잠시 나들이갔다오며 주워왔네요"/>
            <TextView
                android:id="@+id/content"
                android:layout_width="378dp"
                android:layout_height="48dp"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#000000"
                android:lineSpacingExtra="9.8sp"
                tools:text="집 근처 계곡 노지에 갔다 종량제봉투에 쓰레기를 주워담아왔답니다~~ 담배꽁초 어마어마합니다."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <TextView
                android:layout_width="96dp"
                android:layout_height="15dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#999999"
                tools:text="좋아요10 · 댓글21"/>
            <View
                android:layout_width="381.0013122558594dp"
                android:layout_height="0.30000001192092896dp"
                android:background="#cecece">
            </View>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="381.0013122558594dp"
        android:layout_height="0.30000001192092896dp"
        android:background="#cecece">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_box_img"
            android:layout_marginLeft="67.8dp"
            android:layout_marginVertical="24dp"
            android:layout_marginRight="16dp"
            android:hint="댓글을 입력해주세요."
            android:textSize="13sp"/>

    </RelativeLayout>
</RelativeLayout>