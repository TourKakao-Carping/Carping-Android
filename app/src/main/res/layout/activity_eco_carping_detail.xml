<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EcoCarping.Activity.EcoCarpingDetailActivity"
    app:layout_constraintEnd_toEndOf="parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#191919"
            android:gravity="center_horizontal"
            android:text="에코카핑"
            />
        <ImageView
            android:id="@+id/back"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="left"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_above="@id/comment_area"
        android:id="@+id/scroll_view"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:fontFamily="@font/spoqa_han_sans_neo_bold"
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textSize="14sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:id="@+id/hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="11sp"/>

                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/menu"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/list_show_btn"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.viewpager2.widget.ViewPager2
                    android:clipChildren="false"
                    android:id="@+id/image_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/page_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:gravity="center_horizontal"
                    android:background="@drawable/image_navigator"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="3dp"
                    android:layout_alignRight="@id/image_view_pager"
                    android:layout_alignBottom="@id/image_view_pager"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/locate_img"
                    android:layout_width="10dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="6.6sp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="11dp"/>
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#000000"
                android:lineSpacingExtra="9.8sp"
                android:layout_marginTop="20dp"/>
            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/tag_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"/>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/like_comment"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#999999"
                tools:text="좋아요10 · 댓글21"
                android:layout_gravity="right"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.30000001192092896dp"
                android:background="#cecece"
                android:layout_marginTop="22dp">
            </View>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comment_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>>
    <RelativeLayout
        android:id="@+id/comment_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.30000001192092896dp"
            android:background="#cecece">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="94dp">
            <LinearLayout
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="13dp">
                <ImageView
                    android:id="@+id/like_mark"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
            <ImageView
                android:layout_toLeftOf="@+id/complete_comment"
                android:layout_toRightOf="@id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginVertical="23dp"
                android:src="@drawable/edit_text_box_img"/>
            <EditText
                android:paddingHorizontal="16dp"
                android:background="@null"
                android:id="@+id/comment_edit_view"
                android:layout_toLeftOf="@+id/complete_comment"
                android:layout_toRightOf="@id/like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="24dp"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:hint="댓글을 입력해주세요."
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/complete_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#999999"
                android:text="등록"
                android:maxLines="1"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:background="@drawable/border_round_fill_grey"
                android:paddingVertical="16dp"
                android:paddingHorizontal="13dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>