<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1"
        android:textSize="16sp"
        android:textColor="#49ae84"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유저네임"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/spoqa_han_sans_neo"
            android:textStyle="bold"
            android:textSize="14sp"/>
            <ImageView
                android:id="@+id/badge"
                android:layout_width="14.9dp"
                android:layout_height="14.9dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#5f51ef"
                android:layout_marginLeft="4.1dp"
                android:gravity="center_vertical"
                android:text="LV.1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/eco_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="총 6개의 에코카핑을 인증하셨어요"/>

    </LinearLayout>

</LinearLayout>