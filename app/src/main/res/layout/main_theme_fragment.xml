<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="35dp">
    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="신규 차박지✨"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/no_new_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_carping_place_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </RelativeLayout>
    <TextView
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="테마별로 떠나는 차박여행"/>
    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/theme_culture"
            android:layout_width="0dp"
            android:layout_height="61.5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/theme_fire"
            android:layout_width="0dp"
            android:layout_height="61.5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/theme_pet"
            android:layout_width="0dp"
            android:layout_height="61.5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/theme_etc"
            android:layout_width="0dp"
            android:layout_height="61.5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:clickable="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">
        <ImageView
            android:id="@+id/theme_season"
            android:layout_width="0dp"
            android:layout_height="61.5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/theme_reports"
            android:layout_width="0dp"
            android:layout_height="61.5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/theme_nature"
            android:layout_width="0dp"
            android:layout_height="61.5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/theme_exp"
            android:layout_width="0dp"
            android:layout_height="61.5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:clickable="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="26dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="이번 주말\n이런 차박지는 어때요?"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/this_weekend_total_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:gravity="right"
            android:text="전체보기"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textColor="#848484"
            android:textSize="13sp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/no_weekend_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/this_weekend_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </RelativeLayout>
    <ImageView
        android:layout_marginBottom="35dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/banner"/>
    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="차박의 A부터Z까지!"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/az_total_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#848484"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:text="전체보기"
            android:clickable="true"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/no_az_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/az_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </RelativeLayout>
    <TextView
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="인기검색 차박지"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"/>
    <RelativeLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/no_popular_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popular_carping_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
