<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e3e3e3">
    </View>
    <LinearLayout
        android:layout_marginBottom="25.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/profile"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <LinearLayout
            android:layout_marginLeft="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.1"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_marginBottom="5dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:text="2021. 09. 17 "/>
            </LinearLayout>
            <TextView
                android:id="@+id/user"
                android:layout_marginTop="7.1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#000000"
                android:text="user_02"/>
            <TextView
                android:id="@+id/content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#000000"
                android:text="차박에 대해서 아예 모르고 시작했는데 포스트에 유익한 정보
( 특히 꿀팁...👍 )가 가득 담겨있어서 놀랐어요!"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/like_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/like_img"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/like_count"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:textStyle="normal"
                        android:textSize="10sp"
                        android:textColor="#bab9ba"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/private_delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:textStyle="normal"
                    android:textSize="10sp"
                    android:textColor="#5f51ef"
                    android:gravity="end"
                    android:layout_marginLeft="16dp"
                    android:text="삭제"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>