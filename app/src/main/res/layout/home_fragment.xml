<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    app:umanoDragView="@id/dragView"
    app:umanoOverlay="false"
    app:umanoPanelHeight="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/top_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"></FrameLayout>


                <TextView
                    android:id="@+id/search_bar"
                    android:layout_width="379dp"
                    android:layout_height="48dp"
                    android:hint="어디로 떠나고 싶으신가요?"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="212dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/search_border_round"
                    android:paddingLeft="23.6dp"
                    android:clickable="true"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignRight="@+id/search_bar"
                    android:layout_marginTop="226dp"
                    android:layout_marginRight="17dp"
                    android:src="@drawable/main_map_search_image"></ImageView>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="279dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:tabIndicatorColor="@color/black" />

                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="345dp"
                    android:layout_marginRight="16dp"></FrameLayout>


            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dragView"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도시 선택"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"
            android:clickable="false"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i10"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i11"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i12"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i13"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i14"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i15"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/i16"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:clickable="true"/>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인기 차박지"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="18dp"
            android:clickable="false"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popular_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>